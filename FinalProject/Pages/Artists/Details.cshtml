@page
@model FinalProject.Pages.Artists.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h3 style="color: dodgerblue; font-style: italic; font-weight: bold">Artist</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.ArtistName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.ArtistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Birthday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Albums.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Albums.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Albums.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Albums.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Albums.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.Albums.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Albums.Songs)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Song Name</th>
                    <th>Length</th>
                </tr>
                @foreach (var item in Model.Artist.Albums.Songs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SongName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SongLength)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Artist.ArtistID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
</body>
</html>
